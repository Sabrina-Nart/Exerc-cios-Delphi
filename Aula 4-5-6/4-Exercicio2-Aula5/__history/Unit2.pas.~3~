unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    EditN1: TEdit;
    editN2: TEdit;
    Soma: TButton;
    lblTotal: TLabel;
    //procedure EditN1Change(Sender: TObject);
    procedure SomaClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

procedure TForm2.SomaClick(Sender: TObject);

var
  Texto1, texto2: string;
  numero1, numero2, resultado: integer;

  begin
     Texto1 := EditN1.Text;
     Texto2 := EditN2.Text;

     If TryStrToInt(texto1, numero1) then
        Begin
          if TryStrToInt(texto2, numero2) then
             Begin
                resultado := numero1 + numero2;

                lblTotal.Caption := IntToStr ( resultado );
             end
          else
             ShowMessage ('Número 2 inválido');
        end
     else
       ShowMessage ('Número 1 inválido');
  end;

end.

